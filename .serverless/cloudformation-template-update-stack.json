    "GrapeDashbrokerDashapiLambdaVersion8VPgg6nzYm8FuNUDy50YttfpY1JRkXv0gAVnZQrIL9c": {
      "Type": "AWS::Lambda::Version",
      "DeletionPolicy": "Retain",
      "Properties": {
        "FunctionName": {
          "Ref": "GrapeDashbrokerDashapiLambdaFunction"
        },
        "CodeSha256": "PfNwdTSmL0zWRjw9ec7zAfF5MQMao0pTj5yPQzfFj9o="
      }
    },
    "HttpApi": {
      "Type": "AWS::ApiGatewayV2::Api",
      "Properties": {
        "Name": "staging-grape-broker-api",
