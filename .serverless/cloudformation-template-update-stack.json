        "Path": "/",
        "RoleName": {
          "Fn::Join": [
            "-",
            [
              "grape-broker-api",
              "staging",
              {
                "Ref": "AWS::Region"
              },
              "lambdaRole"
            ]
          ]
        }
      }
    },
    "GrapeDashbrokerDashapiLambdaFunction": {
      "Type": "AWS::Lambda::Function",
      "Properties": {
        "Code": {
          "S3Bucket": {
            "Ref": "ServerlessDeploymentBucket"
          },
          "S3Key": "serverless/grape-broker-api/staging/1660498089329-2022-08-14T17:28:09.329Z/grape-broker-api.zip"
        },
        "Handler": "src/handler.entry",
        "Runtime": "nodejs14.x",
        "FunctionName": "grape-broker-api-staging-grape-broker-api",
